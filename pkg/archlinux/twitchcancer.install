post_install() {
  useradd -r -g daemon -d / -s /usr/bin/nologin twitchcancer
  chown -R twitchcancer:daemon /var/log/twitchcancer

  echo 'You must set valid credentials in /etc/twitchcancer/twitchcancer.yml to use twitchcancer-monitor'
}

post_upgrade() {
  chown -R twitchcancer:daemon /var/log/twitchcancer
}

pre_remove() {
  userdel twitchcancer
}
